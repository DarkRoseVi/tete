<Page x:Class="tete.MYPAGE.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tete.MYPAGE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Margin="5">Авторизация</TextBlock>
            <TextBlock Margin="5">Login</TextBlock>
            <TextBox Height="20" Margin="5" Width="150" x:Name="LoginTb"></TextBox>
            <TextBlock Margin="5">Password</TextBlock>
            <PasswordBox Height="20" Margin="5" Width="150" x:Name="PassworTb"></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="EnterBtn" Height="20" Margin="5" Width="100" Content="Вход" ></Button>
                <Button x:Name="RegBtn" Height="20" Margin="5" Width="100" Content="Регистрация" Click="RegBtn_Click"></Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
