<Page x:Class="tete.MYPAGE.Edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tete.MYPAGE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit" DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock> name</TextBlock>
                <TextBox x:Name="NameTb" Text="{Binding user.Name}"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock> Login</TextBlock>
                <TextBox x:Name="LoginTb" Text="{Binding user.Login}"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock> Password</TextBlock>
                <TextBox x:Name="PassswordTb" Text="{Binding user.Password}"></TextBox>
            </StackPanel>
        </StackPanel>
      
        <Button Width="30" Height="20" Content="Save" x:Name="Savebtn" Click="Savebtn_Click"></Button>
    </Grid>
</Page>
